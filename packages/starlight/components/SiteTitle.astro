---
import { logos } from 'virtual:starlight/user-images';
import config from 'virtual:starlight/user-config';
import type { Props } from '../props';
import { Image } from 'astro:assets';
const { siteTitle, siteTitleHref } = Astro.props;

const isDarkSvg = logos.dark?.format === 'svg';
const isLightSvg = logos.light?.format === 'svg';
---

<a href={siteTitleHref} class="site-title sl-flex">
	{
		config.logo && logos.dark && (
			<>
				{!isDarkSvg && (
					<Image
						class:list={{ 'light:sl-hidden': !('src' in config.logo) }}
						src={logos.dark}
						height={logos.dark.height}
						width={logos.dark.width}
						alt={config.logo.alt}
						loading="eager"
					/>
				)}
				{isDarkSvg && (
					<img
						class:list={{ 'light:sl-hidden': !('src' in config.logo) }}
						src={logos.dark.src}
						alt={config.logo.alt}
						loading="eager"
					/>
				)}
			</>
		)
	}
	{
		config.logo && logos.light && (
			<>
				{!isLightSvg && (
					<Image
						class="dark:sl-hidden"
						src={logos.light}
						height={logos.light.height}
						width={logos.light.width}
						alt={config.logo.alt}
						loading="eager"
					/>
				)}
				{isLightSvg && (
					<img class="dark:sl-hidden" src={logos.light.src} alt={config.logo.alt} loading="eager" />
				)}
			</>
		)
	}
	<span class:list={{ 'sr-only': config.logo?.replacesTitle }}>
		{siteTitle}
	</span>
</a>

<style>
	.site-title {
		align-items: center;
		gap: var(--sl-nav-gap);
		font-size: var(--sl-text-h4);
		font-weight: 600;
		color: var(--sl-color-text-accent);
		text-decoration: none;
		white-space: nowrap;
	}
	img {
		height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
		width: auto;
		max-width: 100%;
		object-fit: contain;
		object-position: 0 50%;
	}
</style>
